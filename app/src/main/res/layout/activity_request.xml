<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RequestActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Massage Request"
        app:titleTextColor="@android:color/black"
        android:elevation="5dp"
        android:theme="@style/ToolBarStyle"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/toolbar"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saharsh Pandey"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massage Selected"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swedish"
            android:background="@drawable/textbackground"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massage Duration"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60 mins"
            android:background="@drawable/textbackground"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 May, 2018, Wed, 4:00 PM to 6:30 PM"
            android:background="@drawable/textbackground"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kohli Colony Choti Mukhani, Haldwani ,Uttarakhand"
            android:maxLines="1"
            android:background="@drawable/textbackground"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massage Table Required"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/textbackground"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/accept"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/inputs"
            android:text="Accept"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/decline"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/redbutton"
            android:text="Decline"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fill Form"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/inputs"
            android:text="Start Service"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>